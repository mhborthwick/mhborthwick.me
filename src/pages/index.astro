---
/**
 * Home page - main landing page of the site.
 * Displays introduction and links to connect with Mike Borthwick.
 *
 * @remarks
 * - Uses BaseLayout for consistent structure
 * - Provides accessible links with sufficient touch target size
 * - Mobile-friendly responsive design
 */

import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Mike Borthwick - Home" description="Personal website of Mike Borthwick">
	<main id="main-content" class="main-content">
		<div class="container">
			<h1 class="heading">Mike Borthwick</h1>

			<nav class="links-nav" aria-label="Connect with me">
				<ul class="links-list">
					<li>
						<a href="#resume" class="link" target="_blank" rel="noopener noreferrer">
							View Resume ↗
						</a>
					</li>
					<li>
						<a href="#linkedin" class="link" target="_blank" rel="noopener noreferrer">
							LinkedIn Profile ↗
						</a>
					</li>
					<li>
						<a href="#github" class="link" target="_blank" rel="noopener noreferrer">
							GitHub Projects ↗
						</a>
					</li>
					<li>
						<a href="mailto:placeholder@example.com" class="link">
							Send Email
						</a>
					</li>
				</ul>
			</nav>
		</div>
	</main>
</BaseLayout>

<style>
	.main-content {
		min-height: calc(100vh - 300px);
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 2rem 1rem;
	}

	.container {
		max-width: 37.5rem;
		width: 100%;
		padding: 0 1rem;
		margin: 3rem auto;
	}

	.heading {
		font-size: 2.5rem;
		font-weight: 700;
		color: #1f2937;
		margin: 0 0 1rem 0;
		line-height: 1.2;
	}

	.links-nav {
		margin-top: 2rem;
	}

	.links-list {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.link {
		display: block;
		padding: 1rem 0;
		color: #1f2937;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.2s ease-in-out;
		min-height: 44px;
		display: flex;
		align-items: center;
	}

	.link:hover {
		color: #3b82f6;
	}

	.link:focus {
		outline: 2px solid #3b82f6;
		outline-offset: 2px;
	}

	/* Mobile responsive */
	@media (max-width: 640px) {
		.heading {
			font-size: 2rem;
		}
	}
</style>
