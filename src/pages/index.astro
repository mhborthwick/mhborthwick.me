---
/**
 * Home page - main landing page of the site.
 * Displays introduction and links to connect with Mike Borthwick.
 *
 * @remarks
 * - Uses BaseLayout for consistent structure
 * - Provides accessible links with sufficient touch target size
 * - Mobile-friendly responsive design
 */

import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Mike Borthwick - Home" description="Personal website of Mike Borthwick">
	<main id="main-content" class="main-content">
		<div class="container">
			<h1 class="heading">Mike Borthwick</h1>
			<p class="intro">
				Welcome to my personal site.
			</p>

			<nav class="links-nav" aria-label="Connect with me">
				<ul class="links-list">
					<li>
						<a href="#resume" class="link">
							View Resume
						</a>
					</li>
					<li>
						<a href="#linkedin" class="link">
							LinkedIn Profile
						</a>
					</li>
					<li>
						<a href="#github" class="link">
							GitHub Projects
						</a>
					</li>
					<li>
						<a href="mailto:placeholder@example.com" class="link">
							Send Email
						</a>
					</li>
				</ul>
			</nav>
		</div>
	</main>
</BaseLayout>

<style>
	.main-content {
		min-height: calc(100vh - 300px);
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 2rem 1rem;
	}

	.container {
		max-width: 600px;
		width: 100%;
		text-align: center;
	}

	.heading {
		font-size: 2.5rem;
		font-weight: 700;
		color: #1f2937;
		margin: 0 0 1rem 0;
		line-height: 1.2;
	}

	.intro {
		font-size: 1.125rem;
		color: #6b7280;
		margin: 0 0 2rem 0;
		line-height: 1.6;
	}

	.links-nav {
		margin-top: 2rem;
	}

	.links-list {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.link {
		display: block;
		padding: 1rem 1.5rem;
		background-color: #f3f4f6;
		color: #1f2937;
		text-decoration: none;
		font-weight: 500;
		border-radius: 0.5rem;
		transition: all 0.2s ease-in-out;
		min-height: 44px;
		min-width: 44px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.link:hover {
		background-color: #e5e7eb;
		transform: translateY(-2px);
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
	}

	.link:focus {
		outline: 2px solid #3b82f6;
		outline-offset: 2px;
	}

	/* Mobile responsive */
	@media (max-width: 640px) {
		.heading {
			font-size: 2rem;
		}

		.intro {
			font-size: 1rem;
		}
	}

	/* Tablet and up - can display links in grid */
	@media (min-width: 768px) {
		.links-list {
			display: grid;
			grid-template-columns: repeat(2, 1fr);
			gap: 1rem;
		}
	}
</style>
