---
/**
 * Footer component for the site.
 * Displays copyright information and tech stack.
 *
 * @remarks
 * - Uses semantic footer element
 * - Dynamically displays current year
 * - Lists technologies used to build the site
 * - Mobile-friendly responsive design
 * - Meets WCAG AA color contrast requirements
 */

const currentYear = new Date().getFullYear();
const techStack = ["Astro", "TypeScript", "Tailwind CSS"];
---

<footer class="footer">
	<div class="footer-content">
		<p class="copyright">
			&copy; {currentYear} Mike Borthwick
		</p>
		<p class="tech-stack">
			Built with {techStack.join(" â€¢ ")}
		</p>
	</div>
</footer>

<style>
	.footer {
		margin-top: auto;
		padding: 2rem 1rem;
		border-top: 1px solid #e5e7eb;
		background-color: #f9fafb;
	}

	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
		text-align: center;
	}

	.copyright,
	.tech-stack {
		margin: 0;
		color: #6b7280;
		font-size: 0.875rem;
		line-height: 1.5;
	}

	.copyright {
		font-weight: 500;
		color: #374151;
	}

	/* Mobile responsive - already stacked, but adjust spacing */
	@media (max-width: 640px) {
		.footer {
			padding: 1.5rem 1rem;
		}

		.footer-content {
			gap: 0.75rem;
		}
	}

	/* Larger screens - horizontal layout */
	@media (min-width: 768px) {
		.footer-content {
			flex-direction: row;
			justify-content: space-between;
			text-align: left;
		}
	}
</style>
