---
/**
 * Base layout component for the site.
 * Provides consistent structure including meta tags, navigation, and footer.
 *
 * @remarks
 * - Includes skip link for keyboard navigation accessibility
 * - Sets up semantic HTML5 structure
 * - Provides slot for page-specific content
 * - Supports dark mode via data-theme attribute
 * - Placeholder for analytics integration
 */

import "../styles/global.css";
import Footer from "../components/Footer.tsx";

interface Props {
	/** Page title for SEO and browser tab */
	title?: string;
	/** Page description for SEO meta tag */
	description?: string;
}

const {
	title = "Mike Borthwick",
	description = "Personal website of Mike Borthwick",
} = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<title>{title}</title>
		<!-- TODO: Add analytics script here -->
	</head>
	<body class="min-h-screen flex flex-col">
		<!-- Skip link for keyboard navigation -->
		<a
			href="#main-content"
			class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-blue-600 focus:text-white focus:rounded"
		>
			Skip to main content
		</a>


		<slot />

		<Footer />
	</body>
</html>

<style>
	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border-width: 0;
	}
</style>
